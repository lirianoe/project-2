<div id="header">
    <div class="icon">
        <a href="/auth/login"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
    </div>

<div class="center">

<h1>SIGN UP</h1>

<form action="/auth/signup" method="post" class="signup">

  <div class="txt-field">
    <input type="text" name="username" id="username"/>
    <span></span>
    <label for="username">Username</label>
  </div>

  

  <div class="txt-field">
    <input type="password" name="password" id="passwordInput"/>
    <span></span>
   <label for="passwordInput">Password</label>
  </div>

  
  <button type="submit" class="button">Sign Up</button>


<div class="signup-link">
<p>You don't have an account? <span><a href="/auth/signup">Sign Up</a></span></p>
</div>

{{#if errorMessage}}
<p style="color: red;">{{errorMessage}}</p>
{{/if}}



</form>
</div>
